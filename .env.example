# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-make-it-different-from-jwt-secret

# Server Configuration
PORT=4000
SOCKET_PORT=3000
NODE_ENV=production

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000,http://localhost:5173

# Google AI Configuration
GOOGLE_API_KEY=your-google-ai-api-key-here

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_DB_NAME=ecommerce_faq
MONGODB_COLLECTION_NAME=faq_knowledge_base

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Cache TTL (Time To Live) in seconds
CACHE_MESSAGE_TTL=3600      # 1 hour
CACHE_RESPONSE_TTL=86400    # 24 hours  
CACHE_SESSION_TTL=900       # 15 minutes
CACHE_USER_TTL=1800         # 30 minutes

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# WebSocket Configuration
WEBSOCKET_URL=wss://your-backend-domain.onrender.com