# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-make-it-different-from-jwt-secret

# CORS Configuration (Update with your frontend URL)
CORS_ORIGINS=https://your-frontend-domain.com,http://localhost:5173

# Server Configuration
PORT=4000
SOCKET_PORT=3001

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Redis Cloud Configuration (REQUIRED for production)
REDIS_ENABLED=true
REDIS_CLOUD_HOST=your-redis-host
REDIS_CLOUD_PORT=your-redis-port
REDIS_CLOUD_USERNAME=default
REDIS_CLOUD_PASSWORD=your-redis-password
REDIS_DB=0

# Cache TTL (Time To Live) in seconds
CACHE_MESSAGE_TTL=3600
CACHE_RESPONSE_TTL=86400
CACHE_SESSION_TTL=900
CACHE_USER_TTL=1800

# MongoDB Atlas Configuration (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_DB_NAME=ecommerce_faq
FAQ_COLLECTION_NAME=faq_knowledge_base

# Google Gemini Configuration (REQUIRED)
GOOGLE_API_KEY=your-google-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# Google Embedding Configuration
GOOGLE_EMBEDDING_MODEL=text-embedding-004
GOOGLE_EMBEDDING_DIMENSIONS=768

# RAG Configuration
VECTOR_SEARCH_INDEX_NAME=vector_search_index
SIMILARITY_THRESHOLD_HIGH=0.85
SIMILARITY_THRESHOLD_LOW=0.75
MAX_RETRIEVAL_RESULTS=3
MAX_CONTEXT_LENGTH=4000

# Environment
NODE_ENV=production